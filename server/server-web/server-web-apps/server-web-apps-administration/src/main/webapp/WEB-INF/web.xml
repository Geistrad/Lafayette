<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Lafayette Server Administration</display-name>

    <error-page>
        <error-code>400</error-code>
        <location>/http_error_400.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/http_error_401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/http_error_403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/http_error_404.jsp</location>
    </error-page>
    <error-page>
        <error-code>410</error-code>
        <location>/http_error_.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/http_error_500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/http_error_500.jsp</location>
    </error-page>

    <resource-ref>
        <description>MySQL data source</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>

    <listener>
        <display-name>application</display-name>
        <listener-class>org.lafayette.server.ServerContextListener</listener-class>
    </listener>

    <!--    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>false</param-value>
    </context-param>-->
    <servlet>
        <servlet-name>administration</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <description>Lafayette Administration</description>
            <param-name>UI</param-name>
            <param-value>org.lafayette.server.registration.RegisrationUI</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>administration</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>