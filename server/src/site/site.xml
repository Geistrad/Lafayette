<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.1.0 http://maven.apache.org/xsd/decoration-1.1.0.xsd"
         name="Lafayette Server Application">

    <skin>
        <!--
            http://repo1.maven.org/maven2/org/apache/maven/skins/
            http://maven.apache.org/skins/maven-fluido-skin/
            https://github.com/andriusvelykis/reflow-maven-skin
        -->
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>

    <custom>
        <fluidoSkin>
            <leftColumnClass>span2</leftColumnClass>
            <bodyColumnClass>span10</bodyColumnClass>
            <topBarEnabled>false</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
            <gitHub>
                <projectId>Weltraumschaf/Lafayette</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

    <bannerLeft>
        <name>${project.name}</name>
        <alt>${project.name}</alt>
        <src>images/topbar-logo.png</src>
        <href>index.html</href>
    </bannerLeft>

    <body>
        <breadcrumbs>
            <item name="Weltraumschaf" href="http://www.weltraumschaf.de"/>
            <item name="Continious Integration" href="http://ci.weltraumschaf.de/job/Lafayette-Server/"/>
        </breadcrumbs>
        <menu name="${project.name}">
            <item name="Home" href="index.html"/>
        </menu>
        <menu name="Documentation">
            <item name="Appliance" href="appliance.html"/>
            <item name="Architecture" href="architecture.html"/>
        </menu>
        <menu name="Documentation">
            <item name="Core" href="server-core/index.html"/>
            <item name="Model" href="server-model/index.html"/>
            <item name="Web" href="server-web/index.html"/>
            <item name="Webapp" href="server-webapp/index.html"/>
        </menu>
        <menu name="Reports" ref="reports"/>
    </body>
</project>
