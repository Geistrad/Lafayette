<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Lafayette Server</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>400</error-code>
        <location>/error/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/error/401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/http_error_403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/http_error_404.jsp</location>
    </error-page>
    <error-page>
        <error-code>410</error-code>
        <location>/http_error_.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/http_error_500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/http_error_500.jsp</location>
    </error-page>

    <listener>
        <display-name>application</display-name>
        <listener-class>org.lafayette.server.ServerContextListener</listener-class>
    </listener>

    <filter>
        <!-- http://code.google.com/p/google-guice/wiki/Servlets -->
        <filter-name>guiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/r/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>resources</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>org.lafayette.server.resources</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.spi.container.ResourceFilters</param-name>
            <param-value>org.lafayette.server.filter.AuthenticationResourceFilterFactory</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>resources</servlet-name>
        <url-pattern>/r/*</url-pattern>
    </servlet-mapping>

</web-app>