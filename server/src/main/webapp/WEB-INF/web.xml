<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Lafayette Server</display-name>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>400</error-code>
        <location>/error/400.jsp</location>
        <error-code>401</error-code>
        <location>/error/401.jsp</location>
        <error-code>403</error-code>
        <location>/error/403.jsp</location>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
        <error-code>410</error-code>
        <location>/error/410.jsp</location>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <listener>
        <listener-class>org.lafayette.server.ServerContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Resources</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>org.lafayette.server.resources</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>Resources</servlet-name>
        <url-pattern>/r/*</url-pattern>
    </servlet-mapping>
</web-app>